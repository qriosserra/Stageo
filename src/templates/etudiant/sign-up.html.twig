{% from "macros/button.twig" import button %}
{% from "macros/input.twig" import input %}
{% from "macros/token.twig" import token %}

{% extends "partials/layout.html.twig" %}

{% block title %}S'inscrire{% endblock %}
{% block head %}<script type="module" src="https://unpkg.com/@splinetool/viewer@0.9.425/build/spline-viewer.js"></script>{% endblock %}
{% block nav %}{% endblock %}
{% block content %}
    <main class="h-screen flex items-center justify-center gap-8 relative">
        {{ button("Accueil", "fi-rr-angle-small-left", route("home"), "!absolute !pl-2 top-16 left-0") }}
        <h1 class="w-[36rem]">Nous rejoindre</h1>
        <div class="absolute -left-12 -z-10">
            <spline-viewer url="https://prod.spline.design/yUqmzUNam4TP-Sl2/scene.splinecode"></spline-viewer>
        </div>
        <form class="flex flex-col items-center gap-4" action="{{ route("etudiantSignUp") }}" method="post">
            {{ input("login", "Login", "text", "fi-rr-user", "required") }}
            {{ input("password", "Mot de passe", "password", "fi-rr-lock", "required", pattern.password) }}
            {{ input("confirm", "Confirmation", "password", "fi-rr-lock", "required", pattern.password) }}
            {{ token(token) }}
            <input class="button-primary" type="submit" value="S'inscrire">
            <p>Vous avez déjà un compte étudiant ? <a class="font-bold" href="{{ route("etudiantSignInForm") }}">Se connecter</a></p>
        </form>
    </main>
{% endblock %}
{% block footer %}{% endblock %}