{% extends "partials/layout.html.twig" %}
{% from "macros/button.twig" import button %}
{% block title %}Accueil{% endblock %}
{% block content %}
    <main class="w-[64rem]">
       <!-- <section class="bg-gray-100 py-8">
            <h5 class="">Responsable</h5>
            <p>Rémi Coletta</p>
            <p>coletta@lirmm.fr</p>
        </section>-->
        <section class="bg-gray-100 py-8  flex justify-center items-center ">
            <h5 class="align-middle">Bienvenue sur Stageo</h5><!--mettre le texte aux centre -->
        </section>
        <section class="bg-gray-100 py-8">
            <div class="bg-gray-200 p-4">
                <div class="max-w-screen-xl mx-auto">
                    <div class="relative">
                        <img id="carouselImage" src="assets/img/DuréeB.jpg" alt="Image 1" class="w-full h-100 object-cover rounded-lg shadow-md">
                        <div class="absolute top-500 left-0 right-500 bottom-0 flex items-center justify-center">
                            <button id="prevButton" class="bg-blue-500 text-white px-4 py-2 rounded-l-lg button-ghost">Précédent</button>
                            <button id="nextButton" class="bg-blue-500 text-white px-4 py-2 rounded-r-lg button-ghost">Suivant</button>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        {% if isUserInstance(etudiant) %}
            <section>
                <h5 class="flex justify-center items-center">
                    listes des recherche recentes ou des favories
                </h5>
                <div class="flex flex-wrap overflow-hidden overflow-x-auto whitespace-no-wrap bg-gray-100 py-8 ">
                {% for categorie in categories %}
                    {{button(categorie.nom, "",""," padding: 5px") }}
                {% endfor %}
                </div>
            </section>
            <section>
                <h5 class="flex justify-center items-center ">
                    listes des categories rechercher recement
                </h5>
                <div class="flex flex-wrap  overflow-hidden overflow-x-auto whitespace-no-wrap bg-gray-100 py-8">
                    {% for i in 0..5 %}
                        {{ button("listes des recherche " , "",""," bg-red ") }}
                    {% endfor %}
                </div>
            </section>
        {% endif %}
        {% if isUserInstance(entreprise) %}
            <section>
                <h5 class="flex justify-center items-center">
                    listes des recherche recentes ou des favories
                </h5>
                <div class="flex flex-wrap overflow-hidden overflow-x-auto whitespace-no-wrap bg-gray-100 py-8 ">
                    {% for offre in offres %}
                        {{button(offre.nom, "",""," padding: 5px") }}
                    {% endfor %}
                </div>
            </section>
        {% endif %}
        <script>
            const images = [
                "assets/img/DuréeB.jpg",
                "assets/img/RémunérationB.jpg",
                "assets/img/FAQB.jpg"
            ]; // Liste des images
            let currentIndex = 0; // Index de l'image actuelle

            const carouselImage = document.getElementById("carouselImage");
            const prevButton = document.getElementById("prevButton");
            const nextButton = document.getElementById("nextButton");

            // Fonction pour afficher l'image suivante
            function showNextImage() {
                currentIndex = (currentIndex + 1) % images.length;
                carouselImage.src = images[currentIndex];
            }

            // Fonction pour afficher l'image précédente
            function showPrevImage() {
                currentIndex = (currentIndex - 1 + images.length) % images.length;
                carouselImage.src = images[currentIndex];
            }

            // Gestion des boutons
            prevButton.addEventListener("click", showPrevImage);
            nextButton.addEventListener("click", showNextImage);
        </script>
    </main>
{% endblock %}