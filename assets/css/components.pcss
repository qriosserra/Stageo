[class*="button-"] {
    @apply font-bold rounded-lg py-2 px-4 flex gap-2 cursor-pointer select-none;
}

.button-primary {
    @apply text-primary-50 bg-primary-700 shadow-lg shadow-primary-700/20 transition-all hover:bg-primary-600 hover:shadow-primary-700/50;
}

.button-secondary {

}

.button-ghost {
    @apply bg-none text-gray-700 transition-all hover:bg-gray-500/25;
}

