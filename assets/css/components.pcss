/*ripple effect*/
[class*="button-"] {
    @apply relative;
}

span.ripple {
    @apply absolute rounded-full bg-white/25 scale-0 opacity-100;
    animation: ripple 750ms linear;
}

@keyframes ripple {
    to {
        @apply scale-[4] opacity-0;
    }
}